package ficheros.binarios;

//CreacionEnteros.java
//CrearFicheroBinario.java
import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.InputMismatchException;
import java.util.Scanner;

public class CreacionEnteros {
	public static void main(String[] args) {String ruta="C:\\", fichero="fichero.bin";
		Scanner sc = new Scanner(System.in);
		try {
			System.out.println("INTRODUCE RUTA DEL ARCHIVO");
			ruta=sc.nextLine();
			System.out.println("INTRODUCE NOMBRE DEL ARCHIVO CON SU EXTENSION");
			fichero=sc.nextLine();
		}catch(InputMismatchException ex) {
			System.out.println("ERROR EN LA ENTRADA");
		}
		File r=new File(ruta);
		if(!r.isDirectory())
			r.mkdirs();
		File f=new File(r,fichero);
		if(!f.exists())
			try {
				f.createNewFile();
			}catch(IOException ioe) {
				System.out.println("NO SE HA PODIDO CREAR EL ARCHIVO");
			}
		//Enlazamos el fichero al programa
		try {
			FileOutputStream fEnteros=new FileOutputStream(ruta+"\\"+fichero);
			for(int i=1;i<=50;i++)
				fEnteros.write(i);
			fEnteros.close();
		}catch(IOException ioe) {
			System.out.println("ERROR AL ABRIR EL FICHERO");
		}
		sc.close();
	}
}
