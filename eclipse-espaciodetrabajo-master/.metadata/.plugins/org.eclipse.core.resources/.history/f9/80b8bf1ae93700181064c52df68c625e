package ficheros.binarios;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.InputMismatchException;
import java.util.Scanner;

public class LeerBinario{
	public static void main(String[] args) {
		String ruta="C:\\", fichero="fichero.bin";
		Scanner sc=new Scanner(System.in);
		try {
			System.out.println("INTRODUCE RUTA DEL ARCHIVO");
			ruta=sc.nextLine();
			System.out.println("INTRODUCE NOMBRE DEL ARCHIVO CON SU EXTENSION");
			fichero=sc.nextLine();
		}catch(InputMismatchException ex) {
			System.out.println("ERROR EN LA ENTRADA");
		}
		try {
			//creamos el flujo de entrada asociado al fichero que queremos leer
			FileInputStream fEntrada=new FileInputStream(ruta+"\\"+fichero);
			int byteLeido=fEntrada.read();
			while(byteLeido!=-1) {
				System.out.println(byteLeido);
				byteLeido=fEntrada.read();
			}
			fEntrada.close();
		}catch(IOException e) {
		System.out.println("no se ha podido leer el archivo");
		}
		sc.close();
	}
}
